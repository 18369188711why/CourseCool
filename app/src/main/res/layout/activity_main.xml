<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <FrameLayout
        android:id="@+id/barbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bar_bg1"
        android:orientation="horizontal" >
        <HorizontalScrollView
            android:id="@+id/horiScroll"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:fadingEdge="none"
            android:scrollbars="none" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imgTransBg"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bar_bg_c"
                    android:contentDescription="@string/app_name" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/Head01"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="通"
                        android:textColor="#ffffff"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/Head02"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="好"
                        android:textColor="#ffffff"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/Head03"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="课"
                        android:textColor="#ffffff"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/Head04"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="专"
                        android:textColor="#ffffff"
                        android:textSize="24sp" />
                </LinearLayout>
            </FrameLayout>
        </HorizontalScrollView>



        <ImageView
            android:id="@+id/imgbarop"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/bar_user" />
        <ImageView
            android:id="@+id/imgsearch"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="40dp"
            android:background="@drawable/search" />

    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vPager_Sc"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
